<article class="producto producto-foco">
    <figure>
        <a href="./<%= producto.id %>">
            <% if (producto.images[0] == undefined) { %>
                <% producto.imagesUrl = null %>  
            <% } else { %>
                <% producto.imagesUrl = producto.images[0].url %>  
            <% } %> 

            
            <img src="/assets/images/<%= producto.imagesUrl %>" alt="Imagen de producto 1">
        </a>
    </figure>
    <form class="btn-favorito" action="">
        <input type="checkbox" name="favorito" id="favorito" value="true">
        <label for="favorito">
            <img src="/assets/iconos/corazones/corazones-04-rosa.svg" alt="CorazÃ³n Favorito">
        </label>
    </form>
        <hgroup>
            
            <h1> <%= producto.name %>  </h1>
            <label for="precio">Precio:</label>
            <h2>$ <%= producto.price %>  </h2>
            <label for="marca">Marca:</label>
            <h2> <%= producto.brand %>  </h2>
        </hgroup>
        <form class="btn-comprar" action="./<%= producto.id %>">
            <button>
                <img src="/assets/iconos/bag/bag-plus-blco.svg" alt="Icono de Carrito +">
                COMPRAR
            </button>
        </form>
</article>
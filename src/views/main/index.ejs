                <section class="seccion-productos">
                    <div class="btn-slider btn-slider-left">&#60;</div>
                    <% sales.forEach(product => { %>
                        <% if (product.images[0] == undefined) { %>
                            <% product.imagesUrl = null %>  
                        <% } else { %>
                            <% product.imagesUrl = product.images[0].url %>  
                        <% } %> 
                        <article class="producto producto-foco">
                            <figure>
                                <a href="/productos/<%= product.id %>">
                                    <img src="/product/<%= product.imagesUrl %>" alt="Imagen de <%= product.name %> ">
                                </a>
                            </figure>
                            <form class="btn-favorito" action="">
                                <input type="checkbox" name="favorito" id="favorito" value="true">
                                <label for="favorito">
                                    <img src="/assets/iconos/corazones/corazones-04-rosa.svg" alt="Corazón Favorito">
                                </label>
                            </form>
                            <hgroup>
                                <h2><%= product.brand_id.name %> </h2>
                                <h3><%= product.name %> </h3>
                                <h2>$ <%= product.price %> </h2>
                            </hgroup>
                            <form class="btn-comprar" action="">
                                <button>
                                    <img src="/assets/iconos/bag/bag-plus-blco.svg" alt="Icono de Carrito +">

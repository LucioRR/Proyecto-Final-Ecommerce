        <!-- ----------- SCRIPT MANEJO DEL DOM --------- -->

        <!-- JS SLIDER PRINCIPAL -->
        <script type="text/javascript">
            var counter = 1;
            setInterval(function () {
                document.getElementById('radio' + counter).checked = true;
                counter++;
                if (counter > 4) {
                    counter = 1;
                }
            }, 5000);
        </script>

        <!-- JS MODIFICATION DEL CORAZÓN -->
        <script>
            const meGusta = document.getElementById('meGusta');
            const corazon = document.getElementById('corazon');

            meGusta.addEventListener('change', function () {
                if (meGusta.checked) {
                    corazon.classList.add('corazonNegro');
                    corazon.classList.remove('st16');
                } else {
                    corazon.classList.remove('corazonNegro');
                    corazon.classList.add('st16');
                }
            });
        </script>

